{
  "designSystem": {
    "metadata": {
      "name": "Baseer Design System",
      "version": "1.0.0",
      "created": "2025-10-11",
      "last_updated": "2025-10-11",
      "description": "Comprehensive design system for Baseer financial platform",
      "target": "Arabic-first financial application"
    },
    
    "brandIdentity": {
      "mission": "تمكين الإدارة المالية الذكية للمنطقة العربية",
      "personality": ["trustworthy", "intelligent", "simple", "local"],
      "tone": "professional yet approachable",
      "values": ["trust", "simplicity", "innovation", "cultural_sensitivity"]
    },
    
    "colorPalette": {
      "primary": {
        "50": "#E8F5E8",
        "100": "#C8E6C9",
        "200": "#A5D6A7",
        "300": "#81C784",
        "400": "#66BB6A",
        "500": "#4CAF50",
        "600": "#43A047",
        "700": "#388E3C",
        "800": "#2E7D32",
        "900": "#1B5E20"
      },
      "secondary": {
        "50": "#E3F2FD",
        "100": "#BBDEFB",
        "200": "#90CAF9",
        "300": "#64B5F6",
        "400": "#42A5F5",
        "500": "#2196F3",
        "600": "#1E88E5",
        "700": "#1976D2",
        "800": "#1565C0",
        "900": "#0D47A1"
      },
      "accent": {
        "50": "#FFF3E0",
        "100": "#FFE0B2",
        "200": "#FFCC80",
        "300": "#FFB74D",
        "400": "#FFA726",
        "500": "#FF9800",
        "600": "#FB8C00",
        "700": "#F57C00",
        "800": "#EF6C00",
        "900": "#E65100"
      },
      "neutral": {
        "50": "#FAFAFA",
        "100": "#F5F5F5",
        "200": "#EEEEEE",
        "300": "#E0E0E0",
        "400": "#BDBDBD",
        "500": "#9E9E9E",
        "600": "#757575",
        "700": "#616161",
        "800": "#424242",
        "900": "#212121"
      },
      "semantic": {
        "success": "#4CAF50",
        "warning": "#FF9800",
        "error": "#F44336",
        "info": "#2196F3"
      }
    },
    
    "typography": {
      "fontFamilies": {
        "arabic": {
          "name": "Noto Sans Arabic",
          "fallback": "Arial, sans-serif",
          "weights": [400, 500, 600, 700],
          "usage": "Primary font for Arabic text"
        },
        "english": {
          "name": "Inter",
          "fallback": "system-ui, sans-serif",
          "weights": [400, 500, 600, 700],
          "usage": "Primary font for English text"
        },
        "monospace": {
          "name": "JetBrains Mono",
          "fallback": "Consolas, monospace",
          "weights": [400, 500],
          "usage": "Code and technical content"
        }
      },
      "scale": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px",
        "5xl": "48px"
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      },
      "textStyles": {
        "h1": {
          "fontSize": "36px",
          "fontWeight": 700,
          "lineHeight": 1.25,
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontSize": "30px",
          "fontWeight": 600,
          "lineHeight": 1.3,
          "letterSpacing": "-0.01em"
        },
        "h3": {
          "fontSize": "24px",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h4": {
          "fontSize": "20px",
          "fontWeight": 500,
          "lineHeight": 1.4
        },
        "body1": {
          "fontSize": "16px",
          "fontWeight": 400,
          "lineHeight": 1.5
        },
        "body2": {
          "fontSize": "14px",
          "fontWeight": 400,
          "lineHeight": 1.5
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": 400,
          "lineHeight": 1.4
        }
      }
    },
    
    "spacing": {
      "baseUnit": 8,
      "scale": {
        "0": "0px",
        "1": "4px",
        "2": "8px",
        "3": "12px",
        "4": "16px",
        "5": "20px",
        "6": "24px",
        "8": "32px",
        "10": "40px",
        "12": "48px",
        "16": "64px",
        "20": "80px",
        "24": "96px"
      }
    },
    
    "borderRadius": {
      "none": "0px",
      "sm": "4px",
      "base": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "full": "9999px"
    },
    
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },
    
    "components": {
      "button": {
        "variants": {
          "primary": {
            "backgroundColor": "primary.600",
            "color": "white",
            "borderRadius": "base",
            "padding": "12px 24px",
            "fontSize": "base",
            "fontWeight": 500,
            "hover": {
              "backgroundColor": "primary.700"
            },
            "active": {
              "backgroundColor": "primary.800"
            },
            "disabled": {
              "backgroundColor": "neutral.300",
              "color": "neutral.500"
            }
          },
          "secondary": {
            "backgroundColor": "transparent",
            "color": "primary.600",
            "border": "1px solid primary.600",
            "borderRadius": "base",
            "padding": "12px 24px",
            "fontSize": "base",
            "fontWeight": 500,
            "hover": {
              "backgroundColor": "primary.50"
            }
          },
          "ghost": {
            "backgroundColor": "transparent",
            "color": "neutral.700",
            "borderRadius": "base",
            "padding": "12px 24px",
            "fontSize": "base",
            "fontWeight": 500,
            "hover": {
              "backgroundColor": "neutral.100"
            }
          }
        },
        "sizes": {
          "sm": {
            "padding": "8px 16px",
            "fontSize": "sm"
          },
          "md": {
            "padding": "12px 24px",
            "fontSize": "base"
          },
          "lg": {
            "padding": "16px 32px",
            "fontSize": "lg"
          }
        }
      },
      
      "input": {
        "base": {
          "backgroundColor": "white",
          "border": "1px solid neutral.300",
          "borderRadius": "base",
          "padding": "12px 16px",
          "fontSize": "base",
          "color": "neutral.900",
          "placeholder": "neutral.500",
          "focus": {
            "borderColor": "primary.500",
            "boxShadow": "0 0 0 3px rgba(76, 175, 80, 0.1)"
          },
          "error": {
            "borderColor": "error",
            "boxShadow": "0 0 0 3px rgba(244, 67, 54, 0.1)"
          }
        },
        "rtl": {
          "textAlign": "right",
          "direction": "rtl"
        }
      },
      
      "card": {
        "base": {
          "backgroundColor": "white",
          "borderRadius": "lg",
          "boxShadow": "base",
          "padding": "24px",
          "border": "1px solid neutral.200"
        },
        "elevated": {
          "backgroundColor": "white",
          "borderRadius": "lg",
          "boxShadow": "lg",
          "padding": "24px"
        }
      },
      
      "modal": {
        "overlay": {
          "backgroundColor": "rgba(0, 0, 0, 0.5)",
          "backdropFilter": "blur(4px)"
        },
        "content": {
          "backgroundColor": "white",
          "borderRadius": "xl",
          "boxShadow": "xl",
          "padding": "32px",
          "maxWidth": "500px",
          "margin": "auto"
        }
      }
    },
    
    "layout": {
      "breakpoints": {
        "xs": "320px",
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "container": {
        "maxWidth": {
          "sm": "640px",
          "md": "768px",
          "lg": "1024px",
          "xl": "1280px"
        },
        "padding": {
          "mobile": "16px",
          "desktop": "24px"
        }
      },
      "grid": {
        "columns": 12,
        "gap": "24px"
      }
    },
    
    "iconography": {
      "style": "outline",
      "strokeWidth": 2,
      "sizes": {
        "xs": "12px",
        "sm": "16px",
        "base": "20px",
        "lg": "24px",
        "xl": "32px"
      },
      "library": "Heroicons"
    },
    
    "animation": {
      "duration": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms"
      },
      "easing": {
        "ease": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    
    "accessibility": {
      "focusRing": {
        "color": "primary.500",
        "width": "2px",
        "offset": "2px",
        "style": "solid"
      },
      "colorContrast": {
        "minimum": "4.5:1",
        "enhanced": "7:1"
      },
      "touchTarget": {
        "minimum": "44px"
      }
    },
    
    "rtlSupport": {
      "enabled": true,
      "properties": {
        "textAlign": "right",
        "direction": "rtl",
        "marginLeft": "marginRight",
        "paddingLeft": "paddingRight",
        "borderLeft": "borderRight"
      }
    },
    
    "darkMode": {
      "enabled": false,
      "note": "Dark mode will be implemented in Phase 2"
    }
  }
}